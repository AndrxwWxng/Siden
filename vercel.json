{
  "buildCommand": "pnpm run build",
  "framework": "nextjs",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    },
    {
      "source": "/api/mastra/generate",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST,OPTIONS,GET" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" },
        { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, proxy-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/chat/:path*",
      "destination": "/api/chat/:path*"
    },
    {
      "source": "/api/mastra/generate",
      "destination": "/api/mastra/generate"
    },
    {
      "source": "/api/mastra-generate",
      "destination": "/api/mastra-generate.js"
    },
    {
      "source": "/api/chat-agent/:path*",
      "destination": "/api/chat-agent.js"
    }
  ],
  "env": {
    "SKIP_DB_INIT": "true"
  }
} 